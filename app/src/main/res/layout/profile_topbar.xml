<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadingEdgeLength="2dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/cardview_greenList"
            android:layout_margin="5dp"
           >

            <RelativeLayout
                android:id="@+id/layout_Profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp">

                <ImageView
                    android:id="@+id/img_profile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="6dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/img_profile"
                    android:layout_toRightOf="@+id/img_profile"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_profileName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/img_profile"
                        android:layout_toEndOf="@+id/img_profile"
                        android:layout_toRightOf="@+id/img_profile"
                        android:padding="2dp"
                        android:text="Profile Name"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/profile_Type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_buttons"
                        android:padding="6dp"
                        android:text="Disributor"
                        android:textColor="@color/white"
                        android:textSize="@dimen/microtextSize" />

                    <TextView
                        android:id="@+id/tv_profileEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/tv_profileName"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignStart="@+id/tv_profileName"
                        android:layout_centerVertical="true"
                        android:padding="2dp"
                        android:text="mydukanapp@gmail.com" />

                    <TextView
                        android:id="@+id/tv_profilePhoneNum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:inputType="phone"
                        android:padding="2dp"
                        android:text="7760902997" />
                </LinearLayout>
            </RelativeLayout>
            <View
                android:layout_below="@+id/latout_mydhukahan"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/view" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/layout_Profile"
                android:padding="6dp">
                <Button
                    android:id="@+id/btn_follow"
                    android:layout_width="wrap_content"
                    android:layout_height="25sp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@color/colorPrimary"
                    android:text="Follow"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/profile_Followers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="2 followers" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>