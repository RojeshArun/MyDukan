<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/schemerecorditem"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/listrow_topmargin_multiline">

        <TextView
            android:id="@+id/voucherID"
            style="@style/normalTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/icon_text_space"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/smalltextSize" />

        <TextView
            android:id="@+id/dateID"
            style="@style/normalTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/colorTextSecondary"
            android:textSize="@dimen/microtextSize" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/listrow_topmargin_multiline">

        <TextView
            android:id="@+id/nameID"
            style="@style/normalTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/icon_text_space"
            android:ellipsize="end"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/smalltextSize" />

        <TextView
            android:id="@+id/statusID"
            style="@style/normalTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/microtextSize" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/listrow_topmargin_multiline"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/settledbyID"
            style="@style/normalTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/icon_text_space"
            android:ellipsize="end"
            android:textColor="@color/colorTextSecondary"
            android:textSize="@dimen/smalltextSize"/>

        <TextView
            android:id="@+id/amountID"
            style="@style/normalTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/microtextSize" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginTop="@dimen/listrow_topmargin_multiline"
        android:background="@color/colorDivider"/>

</LinearLayout>