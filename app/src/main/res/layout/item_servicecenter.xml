<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/namelabel"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Name : "
        android:gravity="right"
        android:textSize="14sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/namefield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/namelabel" />

    <TextView
        android:id="@+id/brandlabel"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/namelabel"
        android:textSize="14sp"
        android:textColor="#000000"
        android:text="Brand : "
        android:gravity="right"/>

    <TextView
        android:id="@+id/brandfield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_below="@+id/namefield"
        android:layout_toRightOf="@+id/brandlabel" />

    <TextView
        android:id="@+id/addresslabel"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/brandlabel"
        android:textSize="14sp"
        android:textColor="#000000"
        android:text="Address : "
        android:gravity="right"/>

    <TextView
        android:id="@+id/addressfield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_below="@+id/brandfield"
        android:layout_toRightOf="@id/addresslabel" />

    <TextView
        android:id="@+id/contactlabel"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_below="@+id/addresslabel"
        android:text="Contact : "
        android:gravity="right"/>

    <TextView
        android:id="@+id/contactfield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_below="@+id/addressfield"
        android:layout_toRightOf="@id/contactlabel" />

    <TextView
        android:id="@+id/citylabel"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_below="@+id/contactlabel"
        android:text="City : "
        android:gravity="right"/>

    <TextView
        android:id="@+id/cityfield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_below="@+id/contactfield"
        android:layout_toRightOf="@id/citylabel" />

    <TextView
        android:id="@+id/pincodefield"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginLeft="5dp"
        android:textColor="#000000"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/contactfield"
         />

    <TextView
        android:id="@+id/pincodelabel"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_below="@+id/contactlabel"
        android:layout_toLeftOf="@id/pincodefield"
        android:text="Pincode : "
        android:gravity="right"/>

    <TextView
        android:id="@+id/statelabel"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_below="@+id/citylabel"
        android:text="State : "
        android:gravity="right"/>

    <TextView
        android:id="@+id/statefield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_below="@id/cityfield"
        android:layout_toRightOf="@id/statelabel" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
