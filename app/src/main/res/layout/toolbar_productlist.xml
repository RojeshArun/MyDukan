            android:textSize="@dimen/nanotextSize"/>-->

        <Button
            android:id="@+id/schemeBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:scaleType="fitXY"
            android:drawableTop="@drawable/ic_action_scheme"
            android:drawablePadding="2dp"
            android:textAllCaps="false"
            android:background="@android:color/transparent"
            android:textColor="@color/white"
            android:text="Schemes"
            android:ellipsize="middle"
            android:lines="1"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/recordsBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_records_white_24dp"
            android:drawablePadding="2dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:text="Records"
            android:ellipsize="middle"
            android:lines="1"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/complaintBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_service_center_white"
            android:drawablePadding="2dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:text="Service Centers"
            android:ellipsize="middle"
            android:lines="2"
            android:textSize="14sp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/myorderBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_action_orders_24dp"
            android:drawablePadding="2dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:text="MyOrders"
            android:ellipsize="middle"
            android:lines="1"
            android:textSize="14sp"/>
    </LinearLayout>
</LinearLayout>

