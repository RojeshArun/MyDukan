<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/listrow_bottommargin"
    android:layout_marginEnd="@dimen/listrow_rightmargin"
    android:layout_marginLeft="@dimen/listrow_leftmargin"
    android:layout_marginRight="@dimen/listrow_rightmargin"
    android:layout_marginStart="@dimen/listrow_leftmargin"
    android:layout_marginTop="@dimen/listrow_topmargin"
    android:orientation="vertical">

    <Button
        android:id="@+id/deleteBtn"
        android:layout_width="wrap_content"
        android:text="@string/delete"
        android:textColor="@color/buttonColor"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/listrow_topmargin_multiline"
        android:background="@color/tw__transparent"
        android:minHeight="0dp"
        android:layout_gravity="end|right" />

    <TextView
        android:id="@+id/message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:layout_marginTop="@dimen/listrow_topmargin_multiline"
        android:textSize="@dimen/mediumtextSize" />

    <TextView
        android:id="@+id/time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="end|right"
        android:textColor="@color/text_muted_color"
        android:layout_marginTop="@dimen/listrow_topmargin_multiline"
        android:textSize="@dimen/smalltextSize" />

</LinearLayout>