<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/card_padding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/latout_mydhukahan"
        tools:ignore="UseCompoundDrawables">
    <ImageView
        android:id="@+id/imageDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:padding="@dimen/card_padding"
        android:src="@drawable/ic_logo_mydukan"
        tools:ignore="ContentDescription,RtlHardcoded" />
        <TextView
            android:id="@+id/title_dialog"
            android:layout_gravity="center_vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:text="Reminder"
            android:layout_toRightOf="@+id/imageDialog"
            tools:ignore="HardcodedText,ObsoleteLayoutParam,RtlHardcoded"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textStyle="normal|bold"
            android:textAllCaps="false"
            tools:textColor="@color/colorTextPrimary"
            android:textSize="22sp" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@android:color/holo_orange_dark"
        android:id="@+id/view" />


    <TextView
        android:id="@+id/tv_message"
        android:layout_gravity="center_vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:fontFamily="serif"
        android:layout_weight="0.09" />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
       <Button
           android:id="@+id/dialog_IGNOREbtn"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="ignore"
           android:textColor="@android:color/holo_orange_dark"
           android:layout_weight="1"
           android:textStyle="normal|bold" />

       <Button
           android:id="@+id/dialog_OKbtn"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="OK"
           android:textColor="@android:color/holo_green_dark"
           android:layout_weight="1"
           android:textStyle="normal|bold" />
   </LinearLayout>

</LinearLayout>