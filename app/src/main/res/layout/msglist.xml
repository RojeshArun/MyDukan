<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/wellComeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_alignParentStart="true"
        android:text="Hi, my Name is RAJU,  i can Help you. ASK me PRICE of any model, i shall tell you. Type below the model name."
        android:padding="8dp"
        android:textColor="#212121"
        android:visibility="gone"
        android:background="@drawable/left_background"
        android:elevation="2dp"
        tools:ignore="HardcodedText,UnusedAttribute"
        android:layout_alignParentLeft="true" />
    <TextView
        android:id="@+id/leftText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_alignParentStart="true"
        android:text="Hello this is me!!"
        android:padding="8dp"
        android:textColor="#212121"
        android:background="@drawable/left_background"
        android:elevation="2dp"
        tools:ignore="HardcodedText,UnusedAttribute"
        android:layout_alignParentLeft="true" />


    <TextView
        android:id="@+id/rightText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_alignParentEnd="true"
        android:text="Hi!! How are you!!"
        android:background="@drawable/right_background"
        android:textColor="#fff"
        android:padding="8dp"
        android:elevation="2dp"
        tools:ignore="HardcodedText,UnusedAttribute"
        android:layout_alignParentRight="true" />


</RelativeLayout>